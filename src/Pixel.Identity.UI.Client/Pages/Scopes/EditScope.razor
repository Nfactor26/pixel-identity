@page "/scopes/edit/{Id?}"
@attribute [Authorize(Policy = Policies.CanManageScopes)]

@if (scope != null)
{
    <MudText Typo="Typo.h4">Edit Scope</MudText>
    <br />
    <MudPaper Elevation="4">
        <EditForm Model="@scope" OnValidSubmit="UpdateScopeAsync">
            <FluentValidator />
            <MudCard>
                <MudCardContent>
                    <CascadingValue Value="scope">
                        <ScopeForm Dialog="Dialog" />
                    </CascadingValue>
                </MudCardContent>
                <MudCardActions>
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Update</MudButton>
                </MudCardActions>
            </MudCard>
        </EditForm>
    </MudPaper>

}